<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item  android:state_pressed="true" >
        <shape>
           
            <stroke
                android:width="1dp"
                android:color="#038a2d" />
           
            <gradient android:angle="-90" android:startColor="#28a250" android:endColor="#038a2d"  />

        </shape>
    </item>
    <item>
        <shape>
           
            <stroke
                android:width="1dp"
                android:color="#038a2d" />
            <corners
                android:radius="3dp" />
            <gradient android:angle="-90" android:startColor="#28a250" android:endColor="#038a2d"  />

        </shape>
    </item>
</selector>