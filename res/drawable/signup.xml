<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item  android:state_pressed="true" >
        <shape>
            
            <stroke
                android:width="1dp"
                android:color="#0b5599" />
            
            <gradient android:angle="-90" android:startColor="#0b5599" android:endColor="#2f85d4"  />

        </shape>
    </item>
    <item>
        <shape>
            
            <stroke
                android:width="1dp"
                android:color="#0b5599" />
            <corners
                android:radius="3dp" />
            <gradient android:angle="-90" android:startColor="#0b5599" android:endColor="#2f85d4"  />

        </shape>
    </item>
</selector>